<Window x:Class="Demo.Layouts.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Demo.Layouts"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="2"></Setter>
            <Setter Property="HorizontalContentAlignment" Value="Left"></Setter>
            <Setter Property="Padding" Value="3"></Setter>
            <Setter Property="Background" Value="Transparent"></Setter>
            <Setter Property="BorderThickness" Value="0"></Setter>
            <Setter Property="Foreground" Value="White"></Setter>
            <Setter Property="FontSize" Value="10"></Setter>
            <Setter Property="Margin" Value="15,2,2,2"></Setter>
        </Style>
    </Window.Resources>
    <DockPanel>
        <Grid DockPanel.Dock="Left" Background="#FF25333E" >
            <Grid.RowDefinitions>
                <RowDefinition Height="40"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Image Source="/uac_logo.png"></Image>
                <TextBlock Padding="5" Foreground="White" Grid.Column="1" Text="UAC Integrated Systems" VerticalAlignment="Center"></TextBlock>
            </Grid>

            <Grid Grid.Row="1">
                <StackPanel>
                    <Label Content="Registrar Module"  Foreground="White" FontWeight="Bold"></Label>
                    <Button Content="Student"></Button>
                    <Button Content="Section"></Button>
                    <Button Content="Grades Encoding"></Button>
                    <Button Content="Subject"></Button>
                    <Button Content="Reports"></Button>
                    <Button Content="Maintenance"></Button>
                    <Button Content="Announcements"></Button>
                    <Button Content="Survey"></Button>
                </StackPanel>
            </Grid>
        </Grid>
        <Grid DockPanel.Dock="Top" Height="40" Background="#FFFFC107">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="40"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition Width="40"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Image Margin="6" Source="/icons8-hamburger-menu-50.png"></Image>
            <TextBlock></TextBlock>
            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Column="1" Text="Sam Cerrudo"></TextBlock>
            <TextBlock Grid.Column="2"></TextBlock>
            <Image Grid.Column="2" Margin="8" Source="/dada.png"></Image>
            
        </Grid>
        <Grid>
            <Grid.Background>
                <ImageBrush ImageSource="/uac_logo.png" Opacity="0.2" Stretch="Uniform"/>
            </Grid.Background>

            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="20"></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>

                </Grid.RowDefinitions>
                <Image Source="/statistics-53.png" Grid.Column="0"></Image>
                <Label Content="Statistics (2026-2027)" FontWeight="Bold" Grid.Column="2" VerticalContentAlignment="Center" ></Label>
                <StackPanel Grid.Row="1" Grid.Column="1">
                    <Label Content="117" FontWeight="Bold" VerticalAlignment="Center"></Label>
                    <Label Content="Total applicants" ></Label>
                </StackPanel>
            </Grid>

            <Grid Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="20"></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <Image Source="/calendar-249.png" Margin="0" Grid.Column="0"></Image>
                <Label Content="Last 3 days Application" FontWeight="Bold" Grid.Column="2" VerticalAlignment="Center" ></Label>
                <StackPanel Grid.Row="1" Grid.Column="1">
                    <Label Content="117" FontWeight="Bold" VerticalAlignment="Center"></Label>
                    <Label Content="Total applicants" HorizontalAlignment="Left" ></Label>
                </StackPanel>
            </Grid>

          

            <Grid Grid.Column="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="20"></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <Image Source="/33308.png" Margin="0" Grid.Column="0"></Image>
                <Label Content="For your interviews" FontWeight="Bold" Grid.Column="2" VerticalAlignment="Center" ></Label>

                <StackPanel Grid.Row="1" Grid.Column="2">
                    <Label Content="0" FontWeight="Bold" VerticalAlignment="Center" Background="Red"></Label>
                    <Label Content="For your Interviewes" HorizontalAlignment="Left" Background="Red" ></Label>
                </StackPanel>
            </Grid>
            
            

        </Grid>
    </DockPanel>
</Window>
